<!-- Voucher Page, will grab any coupon number from database then print, back to Index -->
<script type="text/javascript" src="~/js/timeout.js"></script>
<link rel="stylesheet" href="~/css/hide.css">
<div class="hidden">
    <div class="text-center pt-5 pb-3">
        <h1 class="font-weight-bold">Tempat Cetakan Baucer Infaq</h1>
        <p>Sila Tekan Butang di bawah untuk dapatkan Baucer Infaq</p>
    </div>

    <div class="container text-center">
        <form asp-action="PrintVoucher" method="get">
            <div id="show" class="form-group">
                <button type="submit" class="btn btn-primary">Cetak</button>
            </div>
        </form>
        <div class="container text-center pt-5">
            <form asp-action="Index">
                <div class="form-group">
                    <input type="submit" class="btn btn-warning" value="Kembali" />
                </div>
            </form>
        </div>
        <div class="text-center pt-3">
            <p id="alert" style="color:red;display:none;"><strong>Loading, Please Wait</strong></p>
        </div>
    </div>
</div>
