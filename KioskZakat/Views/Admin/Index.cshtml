@{
    ViewData["Title"] = "Admin Console Page";
}
<!-- Contain Check Purchases - check all of successful transac.
             Settlement - initiate manual settlement if batch settlement error persist.
-->
<script type="text/javascript" src="~/js/timeout.js"></script>
<h1>@ViewData["Title"]</h1>

<p>Welcome to admin console page</p>

<form asp-action="Index" asp-controller="Purchases">
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Check Purchases" />
    </div>
</form>

<form asp-action="Settlement">
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Settlement" />
    </div>
</form>


<form asp-action="sendEmail" asp-controller="Home">
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Test Send Email" />
    </div>
</form>

<div class="row">
    <form asp-action="sendWhatsApp" asp-controller="Home" class="pr-2">
        <input type="text" name="type" value="1" hidden/>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Test Send Whatsapp Infaq" />
        </div>
    </form>

    <form asp-action="sendWhatsApp" asp-controller="Home">
        <input type="text" name="type" value="2" hidden />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Test Send Whatsapp Gerobok" />
        </div>
    </form>
</div>
    


